
!!! 5
%html
	%head
		%title ng-donate
		%script{src: "//code.angularjs.org/1.1.5/angular.min.js"}
		%script{src: "/donate.js"}
		%link{rel: "stylesheet", href: "//yui.yahooapis.com/pure/0.2.1/pure-min.css"}
	%body
		%div.pure-g-r
			%div.pure-u-1-4
			%div.pure-u-1-2
				%h1 ng-donate
		%div.pure-g-r.ng-app
			%div.pure-u-1-3
			%div.pure-u-1-3.ng-donate{"ng-controller" => "DonateCtrl"}
				%form.pure-form
					%fieldset
						%label{for: "sponsor-message"} Message
						%textarea.pure-input-1{id: "sponsor-message", placeholder: "optional"}
						%label{for: "sponsor-name"} Your name (publically visible)
						%input{id: "sponsor-name", placeholder: "anonymous"}
					%div.pure-g-r
						%div.pure-u-1-3
							%label{for: "sponsor-currency"} Currency
							%select{"id" => "sponsor-currency", "ng-model" => "selected_currency_code"}
								%option{"ng-repeat" => "currency in currencies", "ng-selected" => "{{currency.default}}"} {{currency.code}}
						%div.pure-u-2-3
							%label{for: "sponsor-amount"} Amount
							%input{id: "sponsor-amount", placeholder: "e.g. 15 or 34.21"}
					%fieldset
						%input{"type" => "button", "ng-repeat" => "amount in selected_currency().amounts", "value" => "{{amount}}"}

						%input{type: "button", value: "£10"}
						%input{type: "button", value: "£20"}
						%input{type: "button", value: "£50"}
						%input{type: "button", value: "£100"}



